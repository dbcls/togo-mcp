{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://togomcp.org/schemas/evaluation-questions.json",
  "title": "TogoMCP Evaluation Questions",
  "description": "JSON Schema for TogoMCP evaluation question files",
  "type": "array",
  "minItems": 1,
  "items": {
    "type": "object",
    "required": ["question"],
    "properties": {
      "id": {
        "description": "Unique identifier for the question",
        "oneOf": [
          {"type": "integer", "minimum": 1},
          {"type": "string", "minLength": 1}
        ],
        "examples": [1, "Q001", "precision_001"]
      },
      "category": {
        "type": "string",
        "description": "Question category based on evaluation rubric",
        "enum": [
          "Precision",
          "Completeness",
          "Integration",
          "Currency",
          "Specificity",
          "Structured Query"
        ],
        "examples": ["Precision", "Integration"]
      },
      "question": {
        "type": "string",
        "description": "The actual question text to ask Claude",
        "minLength": 10,
        "maxLength": 500,
        "examples": [
          "What is the UniProt ID for human BRCA1?",
          "How many human genes are annotated with GO term 'DNA repair' (GO:0006281)?"
        ]
      },
      "expected_answer": {
        "type": "string",
        "description": "Expected answer or outcome for verification purposes",
        "examples": [
          "P38398",
          "Check actual count in GO database",
          "Multiple ChEMBL targets"
        ]
      },
      "notes": {
        "type": "string",
        "description": "Additional context, rationale, or testing notes",
        "examples": [
          "Test basic UniProt ID lookup",
          "Tests cross-database linking: PubChem to ChEMBL",
          "Complex query requiring multiple database operations"
        ]
      },
      "mcp_servers": {
        "type": "object",
        "description": "Optional MCP server configuration override for this specific question",
        "additionalProperties": {
          "type": "object",
          "required": ["type"],
          "properties": {
            "type": {
              "type": "string",
              "enum": ["http", "stdio"],
              "description": "MCP server connection type"
            },
            "url": {
              "type": "string",
              "format": "uri",
              "description": "Server URL (for http type)",
              "examples": ["https://togomcp.rdfportal.org/mcp"]
            },
            "command": {
              "type": "string",
              "description": "Command to run (for stdio type)",
              "examples": ["npx"]
            },
            "args": {
              "type": "array",
              "items": {"type": "string"},
              "description": "Command arguments (for stdio type)"
            },
            "env": {
              "type": "object",
              "additionalProperties": {"type": "string"},
              "description": "Environment variables (for stdio type)"
            },
            "headers": {
              "type": "object",
              "additionalProperties": {"type": "string"},
              "description": "HTTP headers (for http type)"
            }
          },
          "if": {
            "properties": {"type": {"const": "http"}}
          },
          "then": {
            "required": ["url"]
          },
          "if": {
            "properties": {"type": {"const": "stdio"}}
          },
          "then": {
            "required": ["command"]
          }
        },
        "examples": [
          {
            "togomcp": {
              "type": "http",
              "url": "https://togomcp.rdfportal.org/mcp"
            }
          },
          {
            "pubmed": {
              "type": "http",
              "url": "https://pubmed.mcp.claude.com/mcp"
            }
          }
        ]
      }
    },
    "examples": [
      {
        "id": 1,
        "category": "Precision",
        "question": "What is the UniProt ID for human BRCA1?",
        "expected_answer": "P38398",
        "notes": "Test basic UniProt ID lookup"
      },
      {
        "id": 2,
        "category": "Integration",
        "question": "Convert the UniProt ID P04637 to its corresponding NCBI Gene ID.",
        "expected_answer": "7157 (TP53)",
        "notes": "ID conversion test",
        "mcp_servers": {
          "togomcp": {
            "type": "http",
            "url": "https://togomcp.rdfportal.org/mcp"
          }
        }
      }
    ]
  },
  "examples": [
    [
      {
        "id": 1,
        "category": "Precision",
        "question": "What is the UniProt ID for human BRCA1?",
        "expected_answer": "P38398",
        "notes": "Test basic UniProt ID lookup"
      },
      {
        "id": 2,
        "category": "Completeness",
        "question": "How many human genes are annotated with the GO term 'DNA repair' (GO:0006281)?",
        "expected_answer": "Check actual count in GO database",
        "notes": "Tests ability to query and count GO annotations"
      }
    ]
  ]
}
